# NEXA Game Recommender Environment Variables
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# RAWG API Configuration
RAWG_API_KEY=your_rawg_api_key_here

# Twitch API Configuration
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# IGDB API Configuration (Optional) (IGDB AND TWITCH API KEYS ARE INTERCHANGABLE)
IGDB_CLIENT_ID=your_igdb_client_id_here
IGDB_CLIENT_SECRET=your_igdb_client_secret_here

# You can also set them up this way
IGDB_CLIENT_ID=TWITCH_CLIENT_ID
IGDB_CLIENT_SECRET=TWITCH_CLIENT_SECRET



# Application Configuration
PORT=8000
NODE_ENV=development
